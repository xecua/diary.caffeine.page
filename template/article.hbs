{{#> layout }}
    {{#*inline "main"}}
        <div id="container">
            <main>
                <div id="body">
                    <h2>{{ title }}</h2>
                    <div>
                        タグ:
                        {{#if tags}}
                            {{#each tags}}
                                <a href="/tags/{{this}}.html">{{this}}</a>
                            {{/each}}
                        {{else}}
                            なし
                        {{/if}}
                    </div>
                    <div style="text-align: right">
                        {{ date }}
                    </div>
                    {{{ body }}}
                </div>
            </main>
            {{!-- <nav>
                <div id="side">
                    {{> side }}
                </div>
            </nav> --}}
        </div>
    {{/inline}}
{{/layout}}

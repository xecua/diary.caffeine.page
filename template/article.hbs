{{#> layout title=meta.title relpath=meta.relpath is_page=meta.is_page }}
    {{#*inline "main"}}
        <article>
            <h2>{{ meta.title }}</h2>
            <div>
                タグ:
                {{#if meta.tags}}{{#each meta.tags}}
                    <a href="/tags/{{this}}.html">{{this}}</a>
                {{/each}}{{else}}
                    なし
                {{/if}}
            </div>
            <time style="display: block; text-align: right" datetime="{{meta.date}}">
                {{ meta.date }}
            </time>
            <nav style="display: flex; justify-content: space-between; margin: auto 5%">
                {{#if prev_meta}}<a href="/{{ with_extension prev_meta.relpath "html" }}">← 前の記事</a>{{/if}}
                {{#if next_meta}}<a href="/{{ with_extension next_meta.relpath "html" }}">次の記事 →</a>{{/if}}
            </nav>
            <section>
                {{{ body }}}
            </section>
        </article>
        {{#if use_giscus }}
        <script src="https://giscus.app/client.js"
                data-repo="xecua/diary.caffeine.page"
                data-repo-id="R_kgDOH3JjUQ"
                data-category="Announcements"
                data-category-id="DIC_kwDOH3JjUc4CmYYS"
                data-mapping="url"
                data-strict="0"
                data-reactions-enabled="1"
                data-emit-metadata="0"
                data-input-position="top"
                data-theme="light"
                data-lang="ja"
                crossorigin="anonymous"
                async>
        </script>
        {{else}}
        <div id="disqus_thread"></div>
        <script>
            var disqus_config = function () {
            this.page.url = location.href;  // Replace PAGE_URL with your page's canonical URL variable
            this.page.identifier = "{{meta.path}}"; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
            };
            (function() { // DON'T EDIT BELOW THIS LINE
            var d = document, s = d.createElement('script');
            s.src = 'https://diary-caffeine-page.disqus.com/embed.js';
            s.setAttribute('data-timestamp', +new Date());
            (d.head || d.body).appendChild(s);
            })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
        {{/if}}
    {{/inline}}
{{/layout}}
